<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:padding="20dp"
            android:onClick="clickView"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CustomEvent"
            android:padding="20dp"
            android:onClick="clickView1"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="testCrash"
            android:padding="20dp"
            android:onClick="testCrash"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="customCrashLog"
            android:padding="20dp"
            android:onClick="customCrashLog"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="customCrashKey"
            android:padding="20dp"
            android:onClick="customCrashKey"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="realCrash"
            android:padding="20dp"
            android:onClick="realCrash"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="makeCrash"
            android:padding="20dp"
            android:onClick="makeCrash"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="makeCrashTwo"
            android:padding="20dp"
            android:onClick="makeCrashTwo"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="makeCrashThree"
            android:padding="20dp"
            android:onClick="makeCrashThree"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="enbaleCrash"
            android:padding="20dp"
            android:onClick="enbaleCrash"/>

    </LinearLayout>

</ScrollView>
